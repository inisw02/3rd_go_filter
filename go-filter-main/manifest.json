{
    "manifest_version": 3,
    "name": "GO-Filter for Youtube",
    "description": "An extension for filtering YouTube comments with SOTA PLM model",
    "version": "0.1",
    "author": ["Lee Jihun", "Yang Jaehyeok"],

    "icons": {
        "16": "media/icon-16.png",
        "48": "media/icon-48.png",
        "128": "media/icon-128.png"
    },

    "content_scripts": [
        {
                "matches": ["https://www.youtube.com/*"],
            "js": [
                "src/index.js"
            ]
        }
    ],

    "options_ui": {
        "page": "src/popup.html",
        "open_in_tab": true
    },

    "browser_action": {
        "default_popup": "src/popup.html",
        "default_icon": "media/icon-48.png"
    },

    "permissions": ["storage", "https://localhost:3001/*"],
    "host_permissions": ["https://www.youtube.com/*", "https://localhost:3001/*"],

    "browser_specific_settings": {
        "gecko": {
          "id": "{2bd9aae6-e027-4092-acf6-c4a9bef97247}"
        }
    }     
}